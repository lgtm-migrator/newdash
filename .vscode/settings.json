{
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "cSpell.words": [
    "autocrlf",
    "Deno",
    "denoland",
    "falsey",
    "Mutex",
    "newdash",
    "nocheck",
    "Theo"
  ],
  "javascript.autoClosingTags": false,
  "typescript.autoClosingTags": false,
  "editor.defaultFormatter": "vscode.typescript-language-features",
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "deno.enable": false,
  "jest.autoRun": "off"
}
